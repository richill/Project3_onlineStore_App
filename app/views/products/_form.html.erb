<%= simple_form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div><br>

  <div class="field">
    <%= f.label :product_image %><br />
    <%= f.file_field :product_image %>
  </div><br>

  <div class="field">
    <%= f.label :Category%><br />
    <%= f.association :productmain, collection: Productmain.all, prompt: "select a Product" %>
  </div>
  <div class="field">
    <br />
    <%= f.association :product_type, collection: ProductType.all, prompt: "select a product Type" %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :product_brand %><br />
    <%= f.association :product_brand_name, collection: ProductBrandName.all, prompt: "choose a Brand" %>
  </div>
  <div class="field">
    <%= f.label :size_id %><br />
    <%= f.association :size, collection: Size.all, prompt: "select a Size" %>
  </div>
  <div class="field">
    <%= f.label :colour_id %><br />
    <%= f.association :colour, collection: Colour.all, prompt: "select a Colour" %>
  </div>
  <div class="field">
    <%= f.label :stock %><br />
    <%= f.number_field :stock %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
